{
    "name": "starter-snake-node",
    "version": "1.0.0",
    "description": "A simple Battlesnake written in TypeScript for Node.js",
    "main": "build/index.js",
    "scripts": {
        "start": "nodemon --watch '**' --ext 'ts' --exec 'npm run start:dev'",
        "build": "tsc",
        "start:dev": "npm run build && node build/index.js",
        "test": "npm run build && cucumber-js --require ./build/test ./test/features --exit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kgorgi/starter-snake-node-ts.git"
    },
