    "bugs": {
        "url": "https://github.com/kgorgi/starter-snake-node-ts/issues"
    },
    "homepage": "https://github.com/kgorgi/starter-snake-node-ts#readme",
    "dependencies": {
        "@cucumber/cucumber": "^7.0.0",
        "express": "^4.17.1",
        "lodash": "^4.17.20"
    },
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/expect": "^24.3.0",
        "@types/express": "^4.17.9",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.20",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.14.2",
        "@typescript-eslint/parser": "^4.14.2",
        "chai": "^4.3.0",
        "cucumber": "^7.0.0-rc.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "nodemon": "^2.0.7",
        "prettier": "2.2.1",
        "supertest": "^6.1.3",
        "typescript": "^4.1.3"
    }
